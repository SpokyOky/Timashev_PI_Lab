@model Timashev_PI_Lab.Models.Recipe

@{
    ViewData["Title"] = "Изменить рецепт";
}

<h1>Изменить рецепт</h1>

<h4>Рецепт</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" maxlength="50" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HowToCook" class="control-label"></label>
                <input asp-for="HowToCook" class="form-control" />
                <span asp-validation-for="HowToCook" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quality" class="control-label"></label>
                <input asp-for="Quality" class="form-control" />
                <span asp-validation-for="Quality" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p>Продукты: @Html.DropDownList("products", (SelectList)ViewBag.ProductsList)</p>
            </div>
            <div class="form-group">
                <a asp-action="AddProduct" asp-route-id="@Model.Id">Добавить продукт</a>
            </div>
            <div class="form-group">
                <a asp-action="RemoveProduct" asp-route-id="@Model.Id">Убрать продукт</a>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
            @if (!ViewData.ModelState.IsValid && ViewData.ModelState["Error"].Errors.Count > 0)
            {
                <div class="alert alert-
                   <strong>Ошибка!</strong> danger">@ViewData.ModelState["Error"].Errors.First().ErrorMessage
                </div>
            }
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

