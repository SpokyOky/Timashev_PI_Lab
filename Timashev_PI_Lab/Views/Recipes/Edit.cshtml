@model Timashev_PI_Lab.Models.Recipe

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Recipe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p>Продукты: @Html.DropDownList("products", (SelectList)ViewBag.ProductsList)</p>
            </div>
            <div class="form-group">
                <a asp-action="AddProduct" asp-route-id="@Model.Id">Добавить продукт</a>
            </div>
            <div class="form-group">
                <a asp-action="RemoveProduct" asp-route-id="@Model.Id">Убрать продукт</a>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

