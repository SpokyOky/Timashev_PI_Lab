@model Timashev_PI_Lab.Models.TechCard

@{
    ViewData["Title"] = "Создание тех. карты";
}

<h1>Создание тех. карты</h1>

<h4>Тех. карта</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" maxlength="50" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p>Рецепт: @Html.DropDownList("recipelist", (SelectList)ViewBag.RecipesList)</p>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

